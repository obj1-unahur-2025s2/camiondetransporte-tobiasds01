import camion.*
import cosas.*

describe "Camion" {

  method initialize() {
    bumblebee.cambiarForma()
    camion.cargar(bumblebee)
    arenaAgranel.peso(150)
    camion.cargar(arenaAgranel)
  }

  test "Tiene un peso total de 1950 kg." {
    assert.equals(1950, camion.pesoTotal())
  }

  test "Hay uno que tiene 150 kg" {
    assert.that(camion.hayAlgunoConPeso(150))
  }

  test "No excede el peso m√°ximo ya que es 1950" {
    assert.notThat(camion.excedeElPesoMaximo())
  }

}